<div class="min-h-screen bg-gray-50 py-10 px-4">
  <div class="max-w-3xl mx-auto">
    
    <div class="flex items-center justify-between mb-6">
      <%= link_to obras_path, class: "flex items-center text-sm font-medium text-gray-500 hover:text-slate-800 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Voltar para a lista
      <% end %>

      <div class="flex space-x-3">
        <%= link_to edit_obra_path(@obra), class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 transition" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Editar Registro
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100">
      
      <div class="bg-slate-800 px-8 py-10 text-white relative">
        <div class="relative z-10">
          <span class="inline-block px-3 py-1 rounded-full bg-orange-500 text-xs font-bold uppercase tracking-widest mb-4">
            Projeto Ativo
          </span>
          <h1 class="text-4xl font-extrabold tracking-tight"><%= @obra.nome %></h1>
          <div class="flex items-center mt-4 text-slate-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            <span class="text-lg"><%= @obra.endereco %></span>
          </div>
        </div>
        <div class="absolute right-0 bottom-0 opacity-10 transform translate-x-1/4 translate-y-1/4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-64 w-64" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>

      <div class="p-8 border-b border-gray-100 bg-gray-50">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-bold text-gray-500 uppercase tracking-wider">Status da Execução</h2>
          <span class="text-2xl font-black text-slate-800"><%= @obra.progresso %>%</span>
        </div>
        
        <div class="relative pt-1">
          <div class="overflow-hidden h-4 mb-4 text-xs flex rounded-full bg-gray-200 shadow-inner">
            <div style="width:<%= @obra.progresso %>%" 
                 class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-orange-500 transition-all duration-1000">
            </div>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-6">
          <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm">
            <p class="text-xs text-gray-400 font-bold uppercase mb-1">Última Atualização</p>
            <p class="text-sm font-semibold text-slate-700"><%= @obra.updated_at.strftime("%d/%m/%Y às %H:%M") %></p>
          </div>
          <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm">
            <p class="text-xs text-gray-400 font-bold uppercase mb-1">Data de Início</p>
            <p class="text-sm font-semibold text-slate-700"><%= @obra.created_at.strftime("%d/%m/%Y") %></p>
          </div>
        </div>
      </div>

      <div class="px-8 py-6 flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
          <span class="text-sm text-gray-500 font-medium">Sincronizado com o servidor</span>
        </div>
        <p class="text-xs text-gray-400 font-mono">ID DO REGISTRO: <%= @obra.id %></p>
      </div>
    </div>

  </div>
</div>