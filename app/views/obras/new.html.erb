<%# app/views/obras/new.html.erb %>
<%= turbo_frame_tag "modal" do %>
  <%# Overlay escuro no fundo %>
  <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    
    <%# Container do Modal %>
    <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-100 max-w-2xl w-full relative">
      
      <%# Botão Fechar (X) no topo direito %>
      <%= link_to obras_path, data: { turbo_frame: "_top" }, class: "absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>

      <div class="bg-slate-800 px-8 py-6 text-white">
        <div class="flex items-center">
          <div class="p-3 bg-orange-500 rounded-lg mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold">Novo Canteiro de Obra</h1>
            <p class="text-slate-400 text-sm">Inicie o monitoramento do projeto.</p>
          </div>
        </div>
      </div>

      <%= form_with model: @obra, class: "p-8 space-y-6" do |f| %>
        <%# Seus campos de formulário aqui (Nome, Endereço, Progresso) %>
        <div>
          <%= f.label :nome, "Nome do Projeto", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_field :nome, class: "block w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 text-gray-900 focus:ring-orange-500 focus:border-orange-500 transition border" %>
        </div>

        <div>
          <%= f.label :endereco, "Localização", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_field :endereco, class: "block w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 text-gray-900 focus:ring-orange-500 focus:border-orange-500 transition border" %>
        </div>

        <div class="border-t border-gray-100 pt-6 flex items-center justify-end space-x-4">
          <%# data: { turbo_frame: "_top" } faz o link recarregar a página inteira para fechar o modal %>
          <%= link_to "Cancelar", obras_path, data: { turbo_frame: "_top" }, class: "px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-800 transition" %>
          <%= f.submit "Cadastrar Projeto", class: "px-8 py-3 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-lg shadow-lg cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>