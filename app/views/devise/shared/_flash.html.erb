<% flash.each do |type, message| %>
  <div 
    data-controller="flash"
    class="fixed top-5 right-5 z-[100] min-w-[320px] transform transition-all duration-500 ease-in-out"
    id="flash-<%= type %>"
  >
    <div class="<% if type == 'notice' %>bg-green-50 border-green-200 text-green-800<% else %>bg-red-50 border-red-200 text-red-800<% end %> border rounded-xl shadow-lg p-4 flex items-center justify-between">
      
      <div class="flex items-center">
        <% if type == 'notice' %>
          <%# Ícone de Sucesso %>
          <svg class="h-5 w-5 text-green-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <%# Ícone de Erro %>
          <svg class="h-5 w-5 text-red-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
        
        <p class="text-sm font-bold"><%= message %></p>
      </div>

      <button data-action="click->flash#close" class="ml-4 text-gray-400 hover:text-gray-600 transition">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
<% end %>